.header {
  width: 100%;
  height: 80rpx;
  color: white;
  font-weight: bold;
  font-size: 30rpx;
  background-color: #e81e25;
  padding-top: 80rpx;
  padding-left: 40rpx;
}

.publish {
  width: 500rpx;
  height: 100rpx;
  position: fixed;
  left: 125rpx;
  bottom: 150rpx;
}

.comments {
  background-color: white;
  margin: 20rpx 0 130rpx 0;
}

.subtitle {
  padding-left: 40rpx;
  font-size: 30rpx;
  position: relative;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}

.more {
  position: absolute;
  font-size: 25rpx;
  color: #999;
  right: 40rpx;
  bottom: 5rpx;
}

.lists {
  padding: 0 40rpx;
}

.comment {
  width: 100%;
  height: 500rpx;
}

.info {
  width: 100%;
  height: 80rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  float: left;
}

.action {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  text-align: left;
  font-size: 30rpx;
  color: #999;
  float: left;
}

.benefit {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  color: #999;
  font-size: 30rpx;
  float: right;
}

.content {
  width: 610rpx;
  height: 200rpx;
  padding: 0 20rpx 0 100rpx;
  font-size: 35rpx;
}

.text {
  width: 610rpx;
}

.image {
  width: 100%;
  height: 200rpx;
}

.myfriend {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  left: 0;
  top: 55%;
  z-index: 99;
  border-radius: 10rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  padding: 20rpx 0 10rpx 30rpx;
  margin-left: -10rpx;
  background-color: #e81e25;
  color: #fff;
}