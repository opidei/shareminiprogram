.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  margin: 0 0 130rpx;
  box-sizing: border-box;
  background-color: #efefef;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 80rpx;
  color: white;
  font-family: "微软雅黑";
  font-weight: bold;
  font-size: 30rpx;
  background-color: #e81e25;
  padding-top: 80rpx;
  padding-left: 40rpx;
}

.from {
  color: #646566;
}

.filter{
  width: 100%;
  height: 50rpx;
  padding:10rpx 0;
  background: #fff;
  font-size: 30rpx;
  line-height: 50rpx;
  display: flex;
}

.filter-title{
  line-height: 50rpx;
  text-align: left;
  padding-left: 20rpx;
  flex-grow: 1;
}

.filter-button{
  line-height: 50rpx;
  text-align: right ;
  padding-right: 20rpx;
  flex-grow: 1;
}

.pop{
  width: 400rpx;
  height: 90vh;
}

.pop-title{
  margin-top:20px;
  margin-left: 10px;
  font-size: 14px;
}

.pop-price{
  width: 100%;
  margin-top: 20px;
  padding:0 20px;
  display: table;
  vertical-align: middle;
}

.pop-input{
  display: inline-block;
  width: 140rpx;
  height: 40rpx;
  background-color: #ddd;
  border-radius: 20rpx;
  font-size: 12px;
  text-align: center;
}

.van-tab--active {
  color: var(--tab-active-text-color,#e81e25) !important;
}