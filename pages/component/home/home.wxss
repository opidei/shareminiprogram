.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  margin: 0 0 130rpx;
  box-sizing: border-box;
  background-color: #efefef;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 80rpx;
  color: white;
  font-family: "微软雅黑";
  font-weight: bold;
  font-size: 30rpx;
  background-color: #e81e25;
  padding-top: 80rpx;
  padding-left: 40rpx;
}

.from {
  color: #646566;
}